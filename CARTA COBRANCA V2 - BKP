	<queryString>
		<![CDATA[SELECT CONVERT(DATE,GETDATE(),103) AS DTHOJE
     , TGFPAR.RAZAOSOCIAL AS RAZAOPARC
	 , SANKHYA.FORMATAR_CPF_CNPJ(TGFPAR.CGC_CPF) AS CNPJPARC
	 , UPPER(TSIEND.TIPO+' '+TSIEND.NOMEEND+','+TGFPAR.NUMEND+' '+TGFPAR.COMPLEMENTO+' - '+ TSIBAI.NOMEBAI) AS ENDERECOPARC
	 , UPPER(TSICID.NOMECID+'/'+TSIUFS.UF) AS CIDADEPARC
	 , SANKHYA.CTC_FORMATA_CEP(TGFPAR.CEP) AS CEPPARC
	 , TSIEMP.RAZAOSOCIALCOMPLETA AS RAZAOEMP
	 , SANKHYA.FORMATAR_CPF_CNPJ(TSIEMP.CGC) AS CNPJEMP
	 , TGFFIN.NUMNOTA
	 , TGFFIN.DTVENC
	 , TGFFIN.VLRDESDOB
	 , SUM(TGFFIN.VLRDESDOB) OVER() AS TOTALTIT
           , SANKHYA.Extenso_Monetario ( SUM(TGFFIN.VLRDESDOB) OVER() ) AS VLREXTENSO
           , TGFFIN.NUFIN
           , TGFFIN.DESDOBRAMENTO
  FROM SANKHYA.TGFFIN
 INNER JOIN SANKHYA.TGFPAR ON TGFFIN.CODPARC = TGFPAR.CODPARC
 INNER JOIN SANKHYA.TSIEND ON TGFPAR.CODEND = TSIEND.CODEND
 INNER JOIN SANKHYA.TSIBAI ON TGFPAR.CODBAI = TSIBAI.CODBAI
 INNER JOIN SANKHYA.TSICID ON TGFPAR.CODCID = TSICID.CODCID
 INNER JOIN SANKHYA.TSIUFS ON TSICID.UF = TSIUFS.CODUF
 INNER JOIN sankhya.TSIEMP ON TGFFIN.CODEMP = TSIEMP.CODEMP
 WHERE TGFFIN.RECDESP = 1
   AND TGFFIN.CODNAT = 10010104
   AND TGFFIN.DHBAIXA IS NULL
   AND DATEDIFF(DD,TGFFIN.DTVENC,GETDATE()) > 31
   AND TGFFIN.CODPARC = $P{CODPARC}
ORDER BY TGFFIN.DTVENC]]>
	</queryString>
